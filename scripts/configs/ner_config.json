{
  "models": {
    "pubmedbert": "microsoft/BiomedNLP-PubMedBERT-base-uncased-abstract-fulltext",
    "biobert": "dmis-lab/biobert-base-cased-v1.1",
    "clinicalbert": "emilyalsentzer/Bio_ClinicalBERT",
    "bert": "bert-base-uncased",
    "roberta": "roberta-base"
  },
  "hyperparameters": {
    "default": {
      "learning_rate": 3e-5,
      "batch_size": 16,
      "epochs": 3,
      "warmup_steps": 100,
      "weight_decay": 0.01
    },
    "robust_benchmark": {
      "learning_rate": 2e-5,
      "batch_size": 16,
      "epochs": 5,
      "warmup_steps": 500,
      "weight_decay": 0.01
    },
    "optuna_search_space": {
      "learning_rate": [1e-5, 5e-4],
      "batch_size": [8, 16, 32],
      "epochs": [2, 3, 4, 5],
      "warmup_steps": [100, 500, 1000],
      "weight_decay": [0.0, 0.01, 0.1]
    }
  },
  "evaluation": {
    "datasets": [
      "medmentions",
      "cdr", 
      "ncbi_disease",
      "mantra-gsc",
      "shareclef",
      "mimic-iv",
      "adr",
      "cadec",
      "cometa"
    ],
    "domains": [
      "abstracts",
      "clinical",
      "drug_patents",
      "social_media"
    ]
  },
  "semantic_groups": [
    "DISO", "CHEM", "ANAT", "PHYS", "PHEN", 
    "GENE", "PROC", "ACTI", "LIVB", "CONC", "MISC"
  ],
  "metrics": {
    "strict": ["precision", "recall", "f1"],
    "lenient": ["entity_precision", "entity_recall", "entity_f1"],
    "per_label": true,
    "per_domain": true,
    "entity_agnostic": true
  }
} 